{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.iterator.constructor.js\";\nimport \"core-js/modules/esnext.iterator.reduce.js\";\nimport axios from \"axios\";\nexport default {\n  data() {\n    return {\n      form: {\n        name: \"\",\n        address: \"\",\n        payment: \"\"\n      }\n    };\n  },\n  computed: {\n    totalPrice() {\n      // Calculate total price from the cart\n      const cart = JSON.parse(localStorage.getItem('cart')) || [];\n      return cart.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2);\n    }\n  },\n  methods: {\n    async checkout() {\n      try {\n        const response = await axios.post('http://localhost:5555/orders', {\n          name: this.form.name,\n          address: this.form.address,\n          payment: this.form.payment,\n          total_price: this.totalPrice\n        });\n        alert(response.data.message); // Display success message\n        this.$router.push(\"/thank-you\"); // Redirect to thank you page\n      } catch (error) {\n        console.error(\"Failed to checkout:\", error);\n        alert(\"There was an error placing your order. Please try again.\");\n      }\n    }\n  }\n};","map":{"version":3,"names":["axios","data","form","name","address","payment","computed","totalPrice","cart","JSON","parse","localStorage","getItem","reduce","total","item","price","quantity","toFixed","methods","checkout","response","post","total_price","alert","message","$router","push","error","console"],"sources":["C:\\laragon\\www\\admin_ecommerce\\vue\\src\\views\\checkout.vue"],"sourcesContent":["<template>\r\n  <div class=\"checkout-container\">\r\n    <h1>Checkout</h1>\r\n\r\n    <form @submit.prevent=\"checkout\" class=\"checkout-form\">\r\n      <div class=\"form-group\">\r\n        <label for=\"name\">Full Name</label>\r\n        <input type=\"text\" v-model=\"form.name\" required placeholder=\"Enter your full name\" />\r\n      </div>\r\n\r\n      <div class=\"form-group\">\r\n        <label for=\"address\">Shipping Address</label>\r\n        <textarea v-model=\"form.address\" required placeholder=\"Enter your shipping address\"></textarea>\r\n      </div>\r\n\r\n      <div class=\"form-group\">\r\n        <label for=\"payment\">Payment Method</label>\r\n        <select v-model=\"form.payment\" required>\r\n          <option value=\"check_payment\">Check Payment</option>\r\n          <option value=\"cod\">Cash on Delivery (COD)</option>\r\n        </select>\r\n      </div>\r\n\r\n      <div class=\"order-summary\">\r\n        <p><strong>Total: ${{ totalPrice }}</strong></p>\r\n      </div>\r\n\r\n      <button type=\"submit\" class=\"place-order-button\">Place Order</button>\r\n    </form>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      form: {\r\n        name: \"\",\r\n        address: \"\",\r\n        payment: \"\",\r\n      },\r\n    };\r\n  },\r\n  computed: {\r\n    totalPrice() {\r\n      // Calculate total price from the cart\r\n      const cart = JSON.parse(localStorage.getItem('cart')) || [];\r\n      return cart.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2);\r\n    },\r\n  },\r\n  methods: {\r\n    async checkout() {\r\n  try {\r\n    const response = await axios.post('http://localhost:5555/orders', {\r\n      name: this.form.name,\r\n      address: this.form.address,\r\n      payment: this.form.payment,\r\n      total_price: this.totalPrice,\r\n    });\r\n\r\n    alert(response.data.message);  // Display success message\r\n    this.$router.push(\"/thank-you\"); // Redirect to thank you page\r\n  } catch (error) {\r\n    console.error(\"Failed to checkout:\", error);\r\n    alert(\"There was an error placing your order. Please try again.\");\r\n  }\r\n},\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.checkout-container {\r\n  max-width: 600px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n  background-color: #fff;\r\n  border-radius: 10px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\nh1 {\r\n  text-align: center;\r\n  font-size: 2rem;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.checkout-form {\r\n  display: flex;\r\n  flex-direction: column;\r\n}\r\n\r\n.form-group {\r\n  margin-bottom: 20px;\r\n}\r\n\r\nlabel {\r\n  font-size: 1.1rem;\r\n  color: #333;\r\n  margin-bottom: 5px;\r\n}\r\n\r\ninput,\r\ntextarea,\r\nselect {\r\n  width: 100%;\r\n  padding: 10px;\r\n  border: 1px solid #ccc;\r\n  border-radius: 5px;\r\n  font-size: 1rem;\r\n  margin-top: 5px;\r\n}\r\n\r\ntextarea {\r\n  resize: vertical;\r\n  min-height: 120px;\r\n}\r\n\r\nbutton {\r\n  background-color: #4caf50;\r\n  color: white;\r\n  padding: 12px 20px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  font-size: 1.1rem;\r\n  cursor: pointer;\r\n  margin-top: 20px;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\nbutton:hover {\r\n  background-color: #45a049;\r\n}\r\n\r\n.order-summary {\r\n  margin-top: 20px;\r\n  font-size: 1.2rem;\r\n  font-weight: bold;\r\n  text-align: center;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.place-order-button {\r\n  display: block;\r\n  width: 100%;\r\n  background-color: #4caf50;\r\n  color: white;\r\n  border: none;\r\n  padding: 12px 20px;\r\n  font-size: 1.2rem;\r\n  cursor: pointer;\r\n  border-radius: 5px;\r\n}\r\n\r\n.place-order-button:hover {\r\n  background-color: #45a049;\r\n}\r\n</style>\r\n"],"mappings":";;;AAiCA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,IAAI,EAAE;QACJC,IAAI,EAAE,EAAE;QACRC,OAAO,EAAE,EAAE;QACXC,OAAO,EAAE;MACX;IACF,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,UAAUA,CAAA,EAAG;MACX;MACA,MAAMC,IAAG,GAAIC,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,MAAM,CAAC,KAAK,EAAE;MAC3D,OAAOJ,IAAI,CAACK,MAAM,CAAC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,KAAI,GAAID,IAAI,CAACE,QAAQ,EAAE,CAAC,CAAC,CAACC,OAAO,CAAC,CAAC,CAAC;IACvF;EACF,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,QAAQA,CAAA,EAAG;MACnB,IAAI