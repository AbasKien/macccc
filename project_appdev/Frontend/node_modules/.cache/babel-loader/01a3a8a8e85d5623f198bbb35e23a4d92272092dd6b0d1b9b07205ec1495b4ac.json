ouncement-bar {\r\n  background-color: #070707;\r\n  color: #e33131;\r\n  text-align: center;\r\n  padding: 10px;\r\n  font-size: 14px;\r\n}\r\n\r\n.cart-content {\r\n  max-width: 1200px;\r\n  margin: 0 auto;\r\n}\r\n\r\nh1 {\r\n  font-size: 36px;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n/* Cart Item Styles */\r\n.cart-items {\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 20px;\r\n}\r\n\r\n.cart-item {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  background-color: #fff;\r\n  padding: 15px;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.cart-item-image {\r\n  width: 120px;\r\n  height: 120px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n  margin-right: 20px;\r\n}\r\n\r\n.cart-item-info {\r\n  flex: 1;\r\n}\r\n\r\n.cart-item-info h2 {\r\n  font-size: 18px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.cart-item-info p {\r\n  font-size: 16px;\r\n  color: #555;\r\n}\r\n\r\n/* Quantity Controls in Cart */\r\n.quantity-container {\r\n  display: flex;\r\n  align-items: center;\r\n  gap: 10px;\r\n}\r\n\r\n.quantity-input {\r\n  width: 60px;\r\n  padding: 5px;\r\n  font-size: 14px;\r\n  border-radius: 5px;\r\n  border: 1px solid #ccc;\r\n}\r\n\r\n.remove-item {\r\n  background-color: #ff6f61;\r\n  color: white;\r\n  border: none;\r\n  padding: 5px 10px;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n}\r\n\r\n.remove-item:hover {\r\n  background-color: #e04e47;\r\n}\r\n\r\n/* Cart Summary Section */\r\n.cart-summary {\r\n  margin-top: 30px;\r\n  background-color: #fff;\r\n  padding: 20px;\r\n  border-radius: 8px;\r\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.total-price {\r\n  font-size: 16px;\r\n  color: #555;\r\n  margin-top: 10px;\r\n}\r\n\r\n.total-items,\r\n.total-cost {\r\n  font-size: 18px;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n/* Checkout Button */\r\n.checkout-button {\r\n  background-color: #ebcf35;\r\n  color: white;\r\n  border: none;\r\n  padding: 10px 20px;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n  border-radius: 5px;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.checkout-button:hover {\r\n  background-color: #63d031;\r\n}\r\n\r\n/* Empty Cart Message */\r\n.empty-cart-message {\r\n  font-size: 18px;\r\n  color: #555;\r\n  text-align: center;\r\n}\r\n\r\n/* Responsive Design */\r\n@media(max-width: 767px) {\r\n  .cart-item {\r\n    flex-direction: column;\r\n    align-items: flex-start;\r\n  }\r\n\r\n  .cart-item-info {\r\n    margin-left: 0;\r\n  }\r\n\r\n  .cart-summary {\r\n    margin-top: 20px;\r\n    padding: 3vh 4vh;\r\n  }\r\n\r\n  .cart-item-image {\r\n    width: 80px;\r\n    height: 80px;\r\n  }\r\n\r\n  .quantity-input {\r\n    width: 50px;\r\n  }\r\n}\r\n</style>\r\n"],"mappings":";;EACOA,KAAK,EAAC;AAAW;;EADxBC,GAAA;EAEqCD,KAAK,EAAC;;mBAF3C;;EASaA,KAAK,EAAC;AAAgB;mBATnC;mBAAA;;EAwBWA,KAAK,EAAC;AAAc;;EAxB/BC,GAAA;AAAA;;uBACEC,mBAAA,CA8BM,OA9BNC,UA8BM,GA7BOC,KAAA,CAAAC,SAAS,CAACC,MAAM,Q,cAA3BJ,mBAAA,CA2BM,OA3BNK,UA2BM,I,kBA1BJL,mBAAA,CAmBMM,SAAA,QAtBZC,WAAA,CAG0BL,KAAA,CAAAC,SAAS,EAAjBK,IAAI;yBAAhBR,mBAAA,CAmBM;MAnB0BD,GAAG,EAAES,IAAI,CAACC,EAAE;MAAEX,KAAK,EAAC;QAClDY,mBAAA,CAIE;MAHCC,GAAG,0BAA0BH,IAAI,CAACI,SAAS;MAC3CC,GAAG,EAAEL,IAAI,CAACM,IAAI;MACfhB,KAAK,EAAC;4BAPhBiB,UAAA,GASQL,mBAAA,CAYM,OAZNM,UAYM,GAXJN,mBAAA,CAAwB,YAAAO,gBAAA,CAAjBT,IAAI,CAACM,IAAI,kBAChBJ,mBAAA,CAA+B,WAA5B,UAAQ,GAAAO,gBAAA,CAAGT,IAAI,CAACU,KAAK,kB,gBACxBR,mBAAA,CAME;MALAS,IAAI,EAAC,QAAQ;MAbzB,uBAAAC,MAAA,IAc4BZ,IAAI,CAACa,QAAQ,GAAAD,MAAA;MAC7BE,GAAG,EAAC,GAAG;MACNC,GAAG,EAAEf,IAAI,CAACgB,KAAK;MACfC,QAAM,EAAAL,MAAA,IAAEM,QAAA,CAAAC,cAAc,CAACnB,IAAI;6CAjBxCoB,UAAA,I,cAc4BpB,IAAI,CAACa,QAAQ,E;MAArBQ,MAAM,EAAd;IAA8B,E,IAKhCnB,mBAAA,CAAiD;MAAxCoB,OAAK,EAAAV,MAAA,IAAEM,QAAA,CAAAK,UAAU,CAACvB,IAAI;OAAG,QAAM,iBAnBlDwB,UAAA,GAoBUtB,mBAAA,CAA4D,WAAzD,UAAQ,GAAAO,gBAAA,EAAIT,IAAI,CAACU,KAAK,GAAGV,IAAI,CAACa,QAAQ,EAAEY,OAAO,oB;kCAItDvB,mBAAA,CAIM,OAJNwB,UAIM,GAHJxB,mBAAA,CAAoC,WAAjC,eAAa,GAAAO,gBAAA,CAAGS,QAAA,CAAAS,UAAU,kBAC7