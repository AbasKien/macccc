/div>\r\n\r\n    <header class=\"header\">\r\n  <div class=\"logo\">Margatheo Store</div>\r\n  <nav class=\"nav\">\r\n    <router-link\r\n      to=\"/home\"\r\n      class=\"nav-link\"\r\n      :class=\"{ active: $route.path === '/home' }\"\r\n    >\r\n      Home\r\n    </router-link>\r\n    <router-link\r\n      to=\"/product\"\r\n      class=\"nav-link\"\r\n      :class=\"{ active: $route.path === '/product' }\"\r\n    >\r\n      Shop\r\n    </router-link>\r\n  </nav>\r\n  <div class=\"user-controls\">\r\n    <!-- Cart Icon -->\r\n    <div class=\"cart-container\">\r\n      <router-link to=\"/cart\" class=\"cart-link\">\r\n        <img\r\n          src=\"https://cdn-icons-png.flaticon.com/512/833/833314.png\"\r\n          alt=\"Cart Icon\"\r\n          class=\"cart-icon\"\r\n        />\r\n        <span class=\"cart-count\" v-if=\"cartItemCount > 0\">{{ cartItemCount }}</span>\r\n      </router-link>\r\n    </div>\r\n  </div>\r\n\r\n</header>\r\n\r\n\r\n    <!-- Products Section -->\r\n    <section class=\"products\">\r\n      <div class=\"content\">\r\n        <h1>Shop Now for Premium School Supplies</h1>\r\n        <p class=\"description\">\r\n          Explore a wide variety of school supplies designed to help you succeed\r\n          in style.\r\n        </p>\r\n        <div v-if=\"loading\" class=\"loading\">Loading products...</div>\r\n        <div v-else-if=\"products.length > 0\" class=\"product-grid\">\r\n          <div\r\n            class=\"product-card\"\r\n            v-for=\"product in products\"\r\n            :key=\"product.id\"\r\n          >\r\n            <img\r\n              :src=\"`http://localhost:5555${product.image_url}`\"\r\n              :alt=\"product.name\"\r\n              class=\"product-image\"\r\n            />\r\n            <h2 class=\"product-name\">{{ product.name }}</h2>\r\n            <p class=\"product-price\">â‚±{{ product.price }}</p>\r\n            <button\r\n              @click=\"addToCart(product)\"\r\n              class=\"add-to-cart\"\r\n              :disabled=\"product.stock === 0\"\r\n            >\r\n              {{ product.stock === 0 ? \"Out of Stock\" : \"Add to Cart\" }}\r\n            </button>\r\n          </div>\r\n        </div>\r\n        <p v-else>No products available at the moment.</p>\r\n      </div>\r\n    </section>\r\n\r\n    <!-- Footer -->\r\n    <footer class=\"footer\">\r\n      <p>&copy; 2024 Margatheo Store. All Rights Reserved.</p>\r\n    </footer>\r\n  </div>\r\n</template>\r\n\r\n\r\n<script>\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      products: [], // Array to store products\r\n      cartItemCount: 0, // Tracks the cart item count\r\n      loading: true, // Loading state\r\n    };\r\n  },\r\n  created() {\r\n    this.fetchProducts();\r\n    this.updateCartItemCount(); // Update cart count when the page loads\r\n  },\r\n  methods: {\r\n    // Fetch product data from the API\r\n    async fetchProducts() {\r\n      try {\r\n        const response = await axios.get(\"http://localhost:5555/products\");\r\n        this.products = response.data.products.map((product) => ({\r\n          ...product,\r\n          orderQuantity: 1, // Initialize quantity input\r\n        }));\r\n      } catch (error) {\r\n        console.error(\"Error fetching products:\", error);\r\n      } finally {\r\n        this.loading = false;\r\n      }\r\n    },\r\n\r\n    // Add product to the cart and send to backend\r\n    async addToCart(product) {\r\n      // Validate quantity\r\n      if (product.orderQuantity <= 0 || product.orderQuantity > product.stock) {\r\n        return;\r\n      }\r\n\r\n      // Get cart from localStorage or create an empty array if not present\r\n      const cart = JSON.parse(localStorage.getItem(\"cart\")) || [];\r\n\r\n      // Check if the product is already in the cart\r\n      const existingProduct = cart.find((item) => item.id === product.id);\r\n\r\n      // If product exists, update the quantity\r\n      if (existingProduct) {\r\n        existingProduct.quantity += product.orderQuantity;\r\n      } else {\r\n        // Add new product to the cart\r\n        cart.push({\r\n          id: product.id,\r\n          name: product.name,\r\n          price: product.price,\r\n          image: `http://localhost:5555${product.image_url}`, // Add image URL\r\n          quantity: product.orderQuantity,\r\n        });\r\n      }\r\n\r\n      // Save updated cart to localStorage\r\n      localStorage.setItem(\"cart\", JSON.stringify(cart));\r\n\r\n      // Update the cart item count\r\n      this.updateCartItemCount();\r\n\r\n      // Send the cart to the backend\r\n      try {\r\n        await this.saveCartToBackend(cart);\r\n      } catch (error) {\r\n        console.error(\"Error sending cart to the backend:\", error);\r\n      }\r\n\r\n      // Reset the order quantity input to 1\r\n      product.orderQuantity = 1;\r\n    },\r\n\r\n    // Update the number of items in the cart (from localStorage)\r\n    updateCartItemCount() {\r\n      const cart = JSON.parse(localStorage.getItem(\"cart\")) || [];\r\n      this.cartItemCount = cart.reduce((total, item) => total + item.quantity, 0);\r\n    },\r\n\r\n    // Send cart data to the backend\r\n    async saveCartToBackend(cart) {\r\n      try {\r\n        // Assuming the backend endpoint is '/api/cart'\r\n        const response = await axios.post('http://localhost:5555/cart', { cart });\r\n        console.log('Cart saved to backend:', response.data);\r\n      } catch (error) {\r\n        console.error('Error saving cart to backend:', error);\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n<style scoped>\r\n/* Global Styles */\r\nbody {\r\n  margin: 0;\r\n  font-family: \"Arial\", sans-serif;\r\n  background-color: #f8f8f8;\r\n}\r\n\r\n/* Announcement Bar */\r\n.announcement-bar {\r\n  background-color: #333;\r\n  color: #ffed6f;\r\n  text-align: center;\r\n  padding: 10px;\r\n  font-size: 14px;\r\n  font-weight: bold;\r\n}\r\n\r\n/* Header */\r\n.header {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  padding: 20px;\r\n  background: #fff;\r\n  border-bottom: 1px solid #eee;\r\n}\r\n\r\n.logo {\r\n  font-size: 26px;\r\n  font-weight: bold;\r\n  color: #000;\r\n}\r\n\r\n.nav {\r\n  display: flex;\r\n}\r\n\r\n.nav-link {\r\n  margin: 0 10px;\r\n  text-decoration: none;\r\n  color: #333;\r\n  font-weight: 500;\r\n  padding-bottom: 5px;\r\n  position: relative;\r\n  right: 30px\r\n}\r\n\r\n.nav-link.active::after,\r\n.nav-link:hover::after {\r\n  content: \"\";\r\n  position: absolute;\r\n  bottom: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 2px;\r\n  background-color: #f4511e;\r\n}\r\n\r\n.nav-link:hover {\r\n  color: #f4511e;\r\n}\r\n\r\n.user-avatar {\r\n  width: 40px;\r\n  height: 40px;\r\n  border-radius: 50%;\r\n  cursor: pointer;\r\n}\r\n\r\n/* Products Section */\r\n.products {\r\n  padding: 50px 20px;\r\n  background-color: #fff;\r\n  max-width: 1200px;\r\n  margin: 20px auto;\r\n  border-radius: 8px;\r\n  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\nh1 {\r\n  font-size: 36px;\r\n  margin-bottom: 20px;\r\n  color: #333;\r\n}\r\n\r\n.description {\r\n  margin-bottom: 40px;\r\n  font-size: 18px;\r\n  color: #555;\r\n}\r\n\r\n.product-grid {\r\n  display: grid;\r\n  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));\r\n  gap: 20px;\r\n}\r\n\r\n.product-card {\r\n  background: #f9f9f9;\r\n  padding: 20px;\r\n  border-radius: 10px;\r\n  text-align: center;\r\n  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);\r\n}\r\n\r\n.product-image {\r\n  width: 100%;\r\n  height: auto;\r\n  margin-bottom: 15px;\r\n  border-radius: 8px;\r\n}\r\n\r\n.product-name {\r\n  font-size: 18px;\r\n  font-weight: bold;\r\n  margin-bottom: 10px;\r\n}\r\n\r\n.product-price {\r\n  font-size: 16px;\r\n  color: #555;\r\n  margin-bottom: 15px;\r\n}\r\n\r\n.add-to-cart {\r\n  background-color: #f4511e;\r\n  color: white;\r\n  border: none;\r\n  padding: 10px 20px;\r\n  cursor: pointer;\r\n  font-size: 14px;\r\n  border-radius: 5px;\r\n  transition: background-color 0.3s ease;\r\n}\r\n\r\n.add-to-cart:hover {\r\n  background-color: #d73e15;\r\n}\r\n\r\n.add-to-cart:disabled {\r\n  background-color: #ccc;\r\n  cursor: not-allowed;\r\n}\r\n</style>\r\n"],"mappings":";;EACOA,KAAK,EAAC;AAAc;;EAMfA,KAAK,EAAC;AAAQ;;EAEnBA,KAAK,EAAC;AAAK;;EAgBXA,KAAK,EAAC;AAAe;;EAEnBA,KAAK,EAAC;AAAgB;;EA3B/BC,GAAA;EAkCcD,KAAK,EAAC;;;EASPA,KAAK,EAAC;AAAU;;EAClBA,KAAK,EAAC;AAAS;;EA5C1BC,GAAA;EAkD4BD,KAAK,EAAC;;;EAlDlCC,GAAA;EAmD6CD,KAAK,EAAC;;oBAnDnD;;EA8DgBA,KAAK,EAAC;AAAc;;EACrBA,KAAK,EAAC;AAAe;oBA/DpC;;EAAAC,GAAA;AAAA;;;uBACEC,mBAAA,CAgFM,OAhFNC,UAgFM,GA/EJC,mBAAA,0BAA6B,E,0BAC7BC,mBAAA,CAEM;IAFDL,KAAK,EAAC;EAAkB,GAAC,yCAE9B,sBAEAK,mBAAA,CAgCK,UAhCLC,UAgCK,G,0BA/BPD,mBAAA,CAAuC;IAAlCL,KAAK,EAAC;EAAM,GAAC,iBAAe,sBACjCK,mBAAA,CAeM,OAfNE,UAeM,GAdJC,YAAA,CAMcC,sBAAA;IALZC,EAAE,EAAC,OAAO;IACVV,KAAK,EAZXW,eAAA,EAYY,UAAU;MAAAC,MAAA,EACEC,IAAA,CAAAC,MAAM,CAACC,IAAI;IAAA;;IAbnCC,OAAA,EAAAC,QAAA,CAcK,MAEDC,MAAA,QAAAA,MAAA,OAhBJC,gBAAA,CAcK,QAED,E;IAhBJC,CAAA;gCAiBIZ,YAAA,CAMcC,sBAAA;IALZC,EAAE,EAAC,UAAU;IACbV,KAAK,EAnBXW,eAAA,EAmBY,UAAU;MAAAC,MAAA,EACEC,IAAA,CAAAC,MAAM,CAACC,IAAI;IAAA;;IApBnCC,OAAA,EAAAC,QAAA,CAqBK,MAEDC,MAAA,QAAAA,MAAA,OAvBJC,gBAAA,CAqBK,QAED,E;IAvBJC,CAAA;kCAyBEf,mBAAA,CAYM,OAZNgB,UAYM,GAXJjB,mBAAA,eAAkB,EAClBC,mBAAA,CASM,OATNiB,UASM,GARJd,YAAA,CAOcC,sBAAA;IAPDC,EAAE,EAAC,OAAO;IAACV,KAAK,EAAC;;IA5BpCgB,OAAA,EAAAC,QAAA,CA6BQ,MAIE,C,0BAJFZ,mBAAA,CAIE;MAHAkB,GAAG,EAAC,uDAAuD;MAC3DC,GAAG,EAAC,WAAW;MACfxB,KAAK,EAAC;iCAEuByB,KAAA,CAAAC,aAAa,Q,cAA5CxB,mBAAA,CAA4E,QAA5EyB,UAA4E,EAAAC,gBAAA,CAAvBH,KAAA,CAAAC,aAAa,oBAlC1EtB,mBAAA,e;IAAAgB,CAAA;YA0CIhB,mBAAA,sBAAyB,EACzBC,mBAAA,CAgCU,WAhCVwB,UAgCU,GA/BRxB,mBAAA,CA8BM,OA9BNyB,UA8BM,G,0BA7BJzB,mBAAA,CAA6C,YAAzC,sCAAoC,sB,0BACxCA,mBAAA,CAGI;IAHDL,KAAK,EAAC;EAAa,GAAC,oFAGvB,sBACWyB,KAAA,CAAAM,OAAO,I,cAAlB7B,mBAAA,CAA6D,OAA7D8B,UAA6D,EAAzB,qBAAmB,KACvCP,KAAA,CAAAQ,QAAQ,CAACC,MAAM,Q