go\"\r\n          >\r\n            <path d=\"M6 6h15l-1.5 9h-13L6 6z\"></path>\r\n            <path d=\"M6 6L4 4\"></path>\r\n            <path d=\"M20 6L22 4\"></path>\r\n            <circle cx=\"10\" cy=\"19\" r=\"2\"></circle>\r\n            <circle cx=\"18\" cy=\"19\" r=\"2\"></circle>\r\n          </svg>\r\n          <span class=\"cart-count\">{{ cartItemCount }}</span>\r\n        </router-link>\r\n      </div>\r\n    </header>\r\n\r\n    <!-- Banner Section -->\r\n    <section class=\"banner\">\r\n      <div class=\"content\">\r\n        <p class=\"collection\">Back-to-School Essentials Collection</p>\r\n        <h1>Shop Now for Premium School Supplies</h1>\r\n        <p class=\"description\">\r\n          Discover durable, stylish, and eco-friendly school supplies to make\r\n          your year even better. Get everything you need delivered right to your\r\n          door!\r\n        </p>\r\n        <a class=\"shop-now\" href=\"/product\">Shop Now â†’</a>\r\n      </div>\r\n      <div class=\"image\">\r\n        <img\r\n          src=\"https://m.media-amazon.com/images/I/91qkR4QX71L.jpg\"\r\n          alt=\"School Supplies\"\r\n        />\r\n      </div>\r\n    </section>\r\n\r\n    <!-- Footer -->\r\n    <footer class=\"footer\">\r\n      <p>&copy; 2024 Margatheo Store. All Rights Reserved.</p>\r\n    </footer>\r\n  </div>\r\n</template>\r\n\r\n\r\n<script>\r\nimport axios from \"axios\";\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      products: [], // Array to store products\r\n      cartItemCount: 0, // Tracks the cart item count\r\n      loading: true, // Loading state\r\n    };\r\n  },\r\n  created() {\r\n    this.fetchProducts();\r\n    this.updateCartItemCount(); // Update cart count when the page loads\r\n  },\r\n  methods: {\r\n    // Fetch product data from the API\r\n    async fetchProducts() {\r\n      try {\r\n        const response = await axios.get(\"http://localhost:5555/products\");\r\n        this.products = response.data.products.map((product) => ({\r\n          ...product,\r\n          orderQuantity: 1, // Initialize quantity input\r\n        }));\r\n      } catch (error) {\r\n        console.error(\"Error fetching products:\", error);\r\n      } finally {\r\n        this.loading = false;\r\n      }\r\n    },\r\n\r\n    // Add product to the cart and send to backend\r\n    async addToCart(product) {\r\n      // Validate quantity\r\n      if (product.orderQuantity <= 0 || product.orderQuantity > product.stock) {\r\n        return;\r\n      }\r\n\r\n      // Get cart from localStorage or create an empty array if not present\r\n      const cart = JSON.parse(localStorage.getItem(\"cart\")) || [];\r\n\r\n      // Check if the product is already in the cart\r\n      const existingProduct = cart.find((item) => item.id === product.id);\r\n\r\n      // If product exists, update the quantity\r\n      if (existingProduct) {\r\n        existingProduct.quantity += product.orderQuantity;\r\n      } else {\r\n        // Add new product to the cart\r\n        cart.push({\r\n          id: product.id,\r\n          name: product.name,\r\n          price: product.price,\r\n          image: `http://localhost:5555${product.image_url}`, // Add image URL\r\n          quantity: product.orderQuantity,\r\n        });\r\n      }\r\n\r\n      // Save updated cart to localStorage\r\n      localStorage.setItem(\"cart\", JSON.stringify(cart));\r\n\r\n      // Update the cart item count\r\n      this.updateCartItemCount();\r\n\r\n      // Send the cart to the backend\r\n      try {\r\n        await this.saveCartToBackend(cart);\r\n      } catch (error) {\r\n        console.error(\"Error sending cart to the backend:\", error);\r\n      }\r\n\r\n      // Reset the order quantity input to 1\r\n      product.orderQuantity = 1;\r\n    },\r\n\r\n    // Update the number of items in the cart (from localStorage)\r\n    updateCartItemCount() {\r\n      const cart = JSON.parse(localStorage.getItem(\"cart\")) || [];\r\n      this.cartItemCount = cart.reduce((total, item) => total + item.quantity, 0);\r\n    },\r\n\r\n    // Send cart data to the backend\r\n    async saveCartToBackend(cart) {\r\n      try {\r\n        // Assuming the backend endpoint is '/api/cart'\r\n        const response = await axios.post('http://localhost:5555/cart', { cart });\r\n        console.log('Cart saved to backend:', response.data);\r\n      } catch (error) {\r\n        console.error('Error saving cart to backend:', error);\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n<style scoped>\r\n/* Global Styles */\r\nbody {\r\n  margin: 0;\r\n  font-family: \"Arial\", sans-serif;\r\n  background-color: #f8f8f8;\r\n}\r\n\r\n/* Announcement Bar */\r\n.announcement-bar {\r\n  background-color: #333;\r\n  color: #ffed6f;\r\n  text-align: center;\r\n  padding: 10px;\r\n  font-size: 14px;\r\n  font-weight: bold;\r\n}\r\n\r\n/* Header */\r\n.header {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  padding: 20px;\r\n  background: #fff;\r\n  border-bottom: 1px solid #eee;\r\n}\r\n\r\n.logo {\r\n  font-size: 26px;\r\n  font-weight: bold;\r\n  color: #000;\r\n}\r\n\r\n.nav {\r\n  display: flex;\r\n}\r\n\r\n.nav-link {\r\n  margin: 0 10px;\r\n  text-decoration: none;\r\n  color: #333;\r\n  font-weight: 500;\r\n  padding-bottom: 5px;\r\n  position: relative;\r\n}\r\n\r\n.nav-link.active::after,\r\n.nav-link:hover::after {\r\n  content: \"\";\r\n  position: absolute;\r\n  bottom: 0;\r\n  left: 0;\r\n  width: 100%;\r\n  height: 2px;\r\n  background-color: #f4511e;\r\n}\r\n\r\n.nav-link:hover {\r\n  color: #f4511e;\r\n}\r\n\r\n.user-controls {\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.cart {\r\n  position: relative;\r\n  text-decoration: none;\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.cart-logo {\r\n  width: 24px;\r\n  height: 24px;\r\n  margin-right: 5px;\r\n}\r\n\r\n.cart-count {\r\n  position: absolute;\r\n  top: -5px;\r\n  right: -10px;\r\n  background: #ff6f61;\r\n  color: #fff;\r\n  font-size: 12px;\r\n  padding: 3px 7px;\r\n  border-radius: 50%;\r\n}\r\n\r\n/* Banner Section */\r\n.banner {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  padding: 50px 20px;\r\n  background-color: #fff;\r\n  border-radius: 8px;\r\n  margin: 20px auto;\r\n  box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);\r\n  max-width: 1200px;\r\n}\r\n\r\n.content {\r\n  max-width: 50%;\r\n}\r\n\r\n.collection {\r\n  color: #f4511e;\r\n  text-transform: uppercase;\r\n  font-size: 14px;\r\n  margin-bottom: 10px;\r\n  font-weight: bold;\r\n}\r\n\r\nh1 {\r\n  font-size: 42px;\r\n  margin: 10px 0;\r\n  color: #333;\r\n}\r\n\r\n.description {\r\n  margin: 20px 0;\r\n  font-size: 18px;\r\n  color: #666;\r\n}\r\n\r\n.shop-now {\r\n  background-color: #f4511e;\r\n  color: white;\r\n  padding: 12px 24px;\r\n  font-size: 16px;\r\n  border-radius: 5px;\r\n  text-decoration: none;\r\n}\r\n\r\n.shop-now:hover {\r\n  background-color: #d84315;\r\n}\r\n\r\n/* Footer */\r\n.footer {\r\n  background-color: #333;\r\n  color: #fff;\r\n  text-align: center;\r\n  padding: 15px 0;\r\n  font-size: 14px;\r\n  margin-top: 50px;\r\n}\r\n</style>"],"mappings":";;EACOA,KAAK,EAAC;AAAU;;EAOXA,KAAK,EAAC;AAAQ;;EAEfA,KAAK,EAAC;AAAK;;EAgBXA,KAAK,EAAC;AAAe;;EAsBhBA,KAAK,EAAC;AAAY;;;uBA/ChCC,mBAAA,CA4EM,OA5ENC,UA4EM,GA3EJC,mBAAA,0BAA6B,E,0BAC7BC,mBAAA,CAEM;IAFDJ,KAAK,EAAC;EAAkB,GAAC,yCAE9B,sBAEAG,mBAAA,YAAe,EACfC,mBAAA,CA2CS,UA3CTC,UA2CS,G,0BA1CPD,mBAAA,CAAwC;IAAnCJ,KAAK,EAAC;EAAM,GAAC,kBAAgB,sBAClCI,mBAAA,CAeM,OAfNE,UAeM,GAdJC,YAAA,CAMcC,sBAAA;IALZC,EAAE,EAAC,OAAO;IACVT,KAAK,EAbfU,eAAA,EAagB,UAAU;MAAAC,MAAA,EACEC,IAAA,CAAAC,MAAM,CAACC,IAAI;IAAA;;IAdvCC,OAAA,EAAAC,QAAA,CAeS,MAEDC,MAAA,QAAAA,MAAA,OAjBRC,gBAAA,CAeS,QAED,E;IAjBRC,CAAA;gCAkBQZ,YAAA,CAMcC,sBAAA;IALZC,EAAE,EAAC,UAAU;IACbT,KAAK,EApBfU,eAAA,EAoBgB,UAAU;MAAAC,MAAA,EACEC,IAAA,CAAAC,MAAM,CAACC,IAAI;IAAA;;IArBvCC,OAAA,EAAAC,QAAA,CAsBS,MAEDC,MAAA,QAAAA,MAAA,OAxBRC,gBAAA,CAsBS,QAED,