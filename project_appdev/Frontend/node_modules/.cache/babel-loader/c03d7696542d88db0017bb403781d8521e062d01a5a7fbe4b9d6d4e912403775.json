{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/esnext.iterator.constructor.js\";\nimport \"core-js/modules/esnext.iterator.filter.js\";\nimport \"core-js/modules/esnext.iterator.reduce.js\";\nexport default {\n  data() {\n    return {\n      cart: [] // Array to hold cart items\n    };\n  },\n  computed: {\n    // Calculate total price based on item price and quantity\n    totalPrice() {\n      return this.cart.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2);\n    }\n  },\n  created() {\n    // Load cart data from LocalStorage when the component is created\n    const savedCart = localStorage.getItem('cart');\n    this.cart = savedCart ? JSON.parse(savedCart) : [];\n  },\n  methods: {\n    // Remove item from cart\n    removeItem(itemId) {\n      this.cart = this.cart.filter(item => item.id !== itemId);\n      this.updateLocalStorage();\n    },\n    // Update item quantity\n    updateQuantity(item, change) {\n      item.quantity += change;\n      if (item.quantity <= 0) item.quantity = 1; // Prevent negative or zero quantity\n      this.updateLocalStorage();\n    },\n    // Update LocalStorage after any cart change\n    updateLocalStorage() {\n      localStorage.setItem('cart', JSON.stringify(this.cart));\n    },\n    // Handle checkout (placeholder for actual functionality)\n    checkout() {\n      alert('Proceeding to checkout...');\n      this.$router.push('/checkout'); // Replace with actual checkout logic\n      // This could involve redirecting to a payment page or showing an order summary\n    }\n  }\n};","map":{"version":3,"names":["data","cart","computed","totalPrice","reduce","total","item","price","quantity","toFixed","created","savedCart","localStorage","getItem","JSON","parse","methods","removeItem","itemId","filter","id","updateLocalStorage","updateQuantity","change","setItem","stringify","checkout","alert","$router","push"],"sources":["C:\\laragon\\www\\project_appdev\\Backend\\Frontend\\src\\views\\cart.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart-container\">\r\n    <h1 class=\"cart-title\">Your Cart</h1>\r\n    <div v-if=\"cart.length > 0\">\r\n      <div v-for=\"item in cart\" :key=\"item.id\" class=\"cart-item\">\r\n        <img :src=\"`http://localhost:5555${item.image_url}`\" alt=\"Cart Item Image\" class=\"cart-item-image\" />\r\n        <div class=\"cart-item-details\">\r\n          <h2 class=\"cart-item-name\">{{ item.name }}</h2>\r\n          <p class=\"cart-item-description\">{{ item.description }}</p>\r\n          <p class=\"cart-item-price\">${{ item.price }}</p>\r\n          <div class=\"cart-item-actions\">\r\n            <button @click=\"removeItem(item.id)\" class=\"remove-item\">Remove</button>\r\n            <div class=\"quantity-control\">\r\n              <button @click=\"updateQuantity(item, -1)\" :disabled=\"item.quantity <= 1\" class=\"quantity-btn\">-</button>\r\n              <span class=\"quantity\">{{ item.quantity }}</span>\r\n              <button @click=\"updateQuantity(item, 1)\" class=\"quantity-btn\">+</button>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n      <div class=\"cart-summary\">\r\n        <p><strong>Total:</strong> ${{ totalPrice }}</p>\r\n        <button @click=\"checkout\" class=\"checkout-btn\">Proceed to Checkout</button>\r\n      </div>\r\n    </div>\r\n    <p v-else class=\"empty-cart-message\">Your cart is empty.</p>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      cart: [], // Array to hold cart items\r\n    };\r\n  },\r\n  computed: {\r\n    // Calculate total price based on item price and quantity\r\n    totalPrice() {\r\n      return this.cart.reduce((total, item) => total + item.price * item.quantity, 0).toFixed(2);\r\n    }\r\n  },\r\n  created() {\r\n    // Load cart data from LocalStorage when the component is created\r\n    const savedCart = localStorage.getItem('cart');\r\n    this.cart = savedCart ? JSON.parse(savedCart) : [];\r\n  },\r\n  methods: {\r\n    // Remove item from cart\r\n    removeItem(itemId) {\r\n      this.cart = this.cart.filter(item => item.id !== itemId);\r\n      this.updateLocalStorage();\r\n    },\r\n\r\n    // Update item quantity\r\n    updateQuantity(item, change) {\r\n      item.quantity += change;\r\n      if (item.quantity <= 0) item.quantity = 1; // Prevent negative or zero quantity\r\n      this.updateLocalStorage();\r\n    },\r\n\r\n    // Update LocalStorage after any cart change\r\n    updateLocalStorage() {\r\n      localStorage.setItem('cart', JSON.stringify(this.cart));\r\n    },\r\n\r\n    // Handle checkout (placeholder for actual functionality)\r\n    checkout() {\r\n      alert('Proceeding to checkout...');\r\n      this.$router.push('/checkout'); // Replace with actual checkout logic\r\n      // This could involve redirecting to a payment page or showing an order summary\r\n    }\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.cart-container {\r\n  max-width: 800px;\r\n  margin: 0 auto;\r\n  padding: 20px;\r\n  font-family: Arial, sans-serif;\r\n}\r\n\r\n.cart-title {\r\n  text-align: center;\r\n  font-size: 24px;\r\n  font-weight: bold;\r\n  margin-bottom: 20px;\r\n  color: #333;\r\n}\r\n\r\n.cart-item {\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: space-between;\r\n  border: 1px solid #e0e0e0;\r\n  padding: 15px;\r\n  border-radius: 10px;\r\n  margin-bottom: 15px;\r\n  background-color: #f9f9f9;\r\n}\r\n\r\n.cart-item-image {\r\n  width: 120px;\r\n  height: 120px;\r\n  object-fit: cover;\r\n  border-radius: 8px;\r\n}\r\n\r\n.cart-item-details {\r\n  flex-grow: 1;\r\n  padding-left: 20px;\r\n}\r\n\r\n.cart-item-name {\r\n  font-size: 18px;\r\n  font-weight: bold;\r\n  color: #333;\r\n  margin-bottom: 8px;\r\n}\r\n\r\n.cart-item-description {\r\n  font-size: 14px;\r\n  color: #666;\r\n  margin-bottom: 8px;\r\n}\r\n\r\n.cart-item-price {\r\n  font-size: 16px;\r\n  font-weigh